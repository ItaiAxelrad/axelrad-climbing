<nav class="pageNav">
<div class="previous-page">
  {% if pagination.href.previous %}
  <a href="{{ pagination.href.previous }}">
  <svg
    viewBox="0 0 24 24"
    class="icon"
    role="img"
    aria-hidden="true"
    focusable="false"
  >
    <use xlink:href="/images/defs.svg#chevron_left"></use>
  </svg>Previous Page</a>
  {% else %}
  <a href="/">
  <svg
    viewBox="0 0 24 24"
    class="icon"
    role="img"
    aria-hidden="true"
    focusable="false"
  >
    <use xlink:href="/images/defs.svg#chevron_left"></use>
  </svg>Previous Page</a>
  {% endif %} 
  </div>
  <div class="next-page">
  {% if pagination.href.next %}
  <a href="{{ pagination.href.next }}">Next Page <svg
    viewBox="0 0 24 24"
    class="icon"
    role="img"
    aria-hidden="true"
    focusable="false"
  >
    <use xlink:href="/images/defs.svg#chevron_right"></use>
  </svg></a>
  {% else %}
  {% endif %}
  </div>
</nav>