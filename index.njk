---
title: Home
layout: layouts/base.njk
---

<section class="posts">

  {%- include 'components/featuredPost.njk' -%}

  {%- set posts = collections.post | reverse -%}
  {%- for post in posts.slice(1, 4) -%}

    <div class="post">
      <img
    src="{{ post.url }}uploads/{{ post.data.thumbnail }}"
    alt="{{ post.data.title }}"
    class="post-image"
    loading="lazy"
/>
      <div class="post-title">
        <h4>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h4>
        <small>
          <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate}}</time>
        </small>
      </div>
    </div>

  {%- endfor -%}

</section>

