---
title: Pages
layout: layouts/base.njk
permalink: page/{{ pagination.pageNumber + 1}}/
eleventyExcludeFromCollections: true
pagination:
  data: collections.pagedPosts
  size: 6
  alias: posts
---

<main class="posts">

  {% for post in posts %}

    <a href="{{ post.url }}" class="post" aria-label="{{ post.data.title }}">
      <img
    src="{{ post.url }}uploads/{{ post.data.thumbnail }}"
    alt="{{ post.data.title }}"
    class="post-image"
    loading="lazy"
/>
      <div class="post-title">
        <h4>{{ post.data.title }}</h4>
        <small>
          <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate}}</time>
        </small>
      </div>
    </a>

  {% endfor %}

</main>

{%- include 'components/pageNav.njk' -%}