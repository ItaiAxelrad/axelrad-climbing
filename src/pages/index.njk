---
title: Home
layout: layouts/base.njk
eleventyExcludeFromCollections: true
permalink: index.html
---

<main class="posts">

  {%- include 'components/featuredPost.njk' -%}

  {%- set posts = collections.post | reverse -%}
  {%- for post in posts.slice(1, 4) -%}

    <a href="{{ post.url }}" class="post" aria-label="{{ post.data.title }}">
      <img
        src="{{ post.url }}uploads/{{ post.data.thumbnail }}"
        alt="{{ post.data.title }}"
        class="post-image"
        loading="lazy"
      />
      <div class="post-title">
        <h4>{{ post.data.title }}</h4>
          <time datetime="{{ post.data.date | htmlDateString }}" class="subtitle">{{ post.data.date | readableDate}}</time>
      </div>
      </a>

  {%- endfor -%}

</main>

<nav class="pageNav">
  <div class="previous-page"></div>
  <div class="next-page">
    <a href="/page/1">Older Posts <svg
          class="icon"
          viewBox="0 0 24 24"
          aria-hidden="true"
          focusable="false"
        >
          <use xlink:href="/images/defs.svg#chevron_right"></use>
  </svg>
    </a>
  </div>
</nav>