---
title: Posts
stylesheet: taglist
permalink: /{{ title | lower }}/
---
<div class="archive">
  <h1>{{ title }}</h1>
  <noscript>
    <p>JavaScript must be enabled to use the search function</p>
  </noscript>
  <div class="search-container">
    <label for="search">Search</label>
    <input
      type="text"
      id="search"
      class="search"
      placeholder="find a post"
    />
  </div>
  <ol id="results" class="post-list" reversed >
    {% set currentYear = "" %}
    {%- set posts = collections.post | reverse -%}
    {%- for post in posts.slice(0, 15) -%}
        {% set postYear = post.date.getFullYear() %}
        {% if currentYear != postYear %}
          {% set currentYear = postYear %}
          <li><h2 id="{{ postYear }}" class="list-header">{{ postYear }}</h2></li>
        {% endif %}
      {% include 'listItem.njk' %}
    {% endfor %}
    </ol>
    <div class="center">
      <button id="loadAll" class="btn">Load More</button>
    </div>
</div>
<script src="/assets/scripts/search.js" defer ></script>