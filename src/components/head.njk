<head>
  <title>{{ metadata.name }}</title>
  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, viewport-fit=cover"
  />
  <meta name="generator" content="{{ eleventy.generator }}">
  <meta name="description" content="{{ metadata.description }}">
  <meta
    name="keywords"
    content="Itai, Eden, Axelrad, Climbing, Bouldering, California, Colorado, blog, post, twins"
  />
  <meta name="theme-color" content="#ffffff"/>
  <meta name="color-scheme" content="dark light">
  <!-- iOS PWA -->
  <meta name="apple-mobile-web-app-capable" content="yes"/>
  <meta name="apple-mobile-web-app-status-bar-style" content="default"/>
  <meta name="apple-mobile-web-app-title" content="blog"/>
  <!-- Social: link preview and RSS/Atom -->
  {%- include 'linkPreview.njk' -%}
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.name}}">
  <!-- favicons -->
  <link href="/images/icon.png" rel="apple-touch-startup-image"/>
  <link href="/images/icon.png" rel="apple-touch-icon"/>
  <link href="/favicon.svg" rel="icon" type="image/svg+xml"/>
  <link
    href="/manifest.json"
    rel="manifest"
    type="application/json"
    crossorigin="use-credentials"
/>
  <!-- capture the CSS content as a Nunjucks variable -->
  {% set css %}
    {# {% include "../styles/normalize.css" %} #}
    {% include "../assets/styles/main.css" %}
    {% include "../assets/styles/mobile.css" %}
  {% endset %}
  <!-- feed it through our cssmin filter to minify -->
  {% if layout != null %}
  <style>
    {{ css | postCSS | safe }}
  </style>
  {% endif %}
  {% if stylesheet %}
  <link href="/assets/styles/{{ stylesheet }}.css" rel="stylesheet" type="text/css">
  {% endif %}
</head>